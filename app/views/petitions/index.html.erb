<h2>Все петиции</h2>
<table align="left" width="900">
  <tr>
    <th>Петиция</th>
    <th>Автор</th>
    <th colspan="2"></th>
  </tr>

  <% @petitions.each do |petition| %>
      <tr>
        <td><%=link_to petition.title, petition %></td>
        <td><%= petition.user.first_name%> <%= petition.user.last_name %></td>
      </tr>
  <% end %>
</table>