<h2>Изменение петиции</h2>

<%= form_for @petition do |f| %>
    <% if @petition.errors.any? %>
        <div class="error_message">
          <h2>Form is invalid</h2>
          <ul>
            <% @petition.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group" style="width: 50%">
      <%= f.label :title, 'Название' %><br />
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group" style="width: 50%">
      <%= f.label :text, 'Описание' %><br />
      <%= f.text_area :text, class: 'form-control' %>
    </div>

    <div class="field">
      <%= f.label "Категории" %><br />
      <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name do |b| %>
          <div class="collection-check-box">
            <%= b.check_box %>
            <%= b.label %>
          </div>
      <% end %>
    </div><br />

    <div class="action">
      <%= submit_tag 'Сохранить', class: 'btn btn-success' %>
    </div>
<% end %>