<h1 xmlns="http://www.w3.org/1999/html">Регистрация</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
  <div class="errors message">
    <h3>Данные неверные</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
 <% end %>

  <div class="form-group" style="width: 50%">
    <%= f.label :title, 'Email' %><br />
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group" style="width: 50%">
    <%= f.label :title, 'Имя' %>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group" style="width: 50%">
    <%= f.label :title, 'Фамилия' %>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="form-group" style="width: 50%">
    <%= f.label :title, 'Пароль' %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-group" style="width: 50%">
    <%= f.label :title, 'Подтверждение пароля' %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>

    <%= show_simple_captcha %><br />

  <div class="action"><%= submit_tag 'Зарегистрироваться', class: 'btn btn-primary'%></div>
<% end %>